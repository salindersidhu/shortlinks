{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "react/no-unescaped-entities": "off",
        "prefer-const": "error",
        "space-before-blocks": "error",
        "indent": 2,
        "curly": "warn",
        "no-console": "off"
    }
}
