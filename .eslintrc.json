{
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": 2,
        "curly": "warn",
        "no-console": "off",
        "prefer-const": "error",
        "space-before-blocks": "error",
        "react/no-unescaped-entities": "off",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ]
    }
}
